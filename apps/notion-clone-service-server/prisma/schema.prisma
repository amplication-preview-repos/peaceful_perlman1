datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Page {
  id          String     @id @default(cuid())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  title       String?
  content     String?
  workspace   Workspace? @relation(fields: [workspaceId], references: [id])
  workspaceId String?
  blocks      Block[]
}

model Workspace {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String?
  description String?
  owner       String?
  pages       Page[]
}

model Block {
  id        String              @id @default(cuid())
  createdAt DateTime            @default(now())
  updatedAt DateTime            @updatedAt
  typeField EnumBlockTypeField?
  content   Json?
  page      Page?               @relation(fields: [pageId], references: [id])
  pageId    String?
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  firstName String?
  lastName  String?
  username  String   @unique
  email     String?  @unique
  password  String
  roles     Json
}

enum EnumBlockTypeField {
  Option1
}
